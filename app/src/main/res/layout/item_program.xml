<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_program"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="20dp"
        android:layout_marginStart="@dimen/space_8dp"
        android:layout_marginLeft="@dimen/space_8dp"
        android:layout_marginRight="@dimen/space_8dp"
        android:layout_height="match_parent" >

        <View
            android:id="@+id/circle"
            android:background="@color/teal_500"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_8dp"
            android:layout_marginRight="@dimen/space_8dp"
            android:foregroundGravity="center_horizontal" />

        <View
            android:id="@+id/bar"
            android:background="@drawable/circle_broadcasted"
            android:layout_centerHorizontal="true"
            android:foregroundGravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:layout_width="@dimen/space_12dp"
            android:layout_height="@dimen/space_12dp" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:foreground="?android:attr/selectableItemBackground"
        style="@style/CardViewStyle">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/workIcon"
                android:src="@drawable/ic_image_black_24dp"
                style="@style/ImageIcon64dpStyle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/start_at" />

            <TextView
                android:id="@+id/start_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/start_at"
                android:textSize="16sp"
                android:textColor="#00b8a9"
                android:padding="3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/channel"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="@drawable/shape_channel"
                android:padding="3dp"
                app:layout_constraintStart_toEndOf="@+id/start_at"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/rebroadcast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:padding="3dp"
                android:text="@string/rebroadcast"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="@drawable/shape_rebroadcast"
                app:layout_constraintStart_toEndOf="@+id/channel"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="8dp" />

            <TextView
                android:id="@+id/workTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/title"
                android:textColor="@color/light_blue_800"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/episode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/workIcon"
                app:layout_constraintTop_toBottomOf="@+id/channel"
                app:layout_constraintWidth_default="wrap" />

            <TextView
                android:id="@+id/episode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/episode"
                android:textColor="@color/light_blue_800"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/workIcon"
                app:layout_constraintTop_toBottomOf="@+id/workTitle" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>