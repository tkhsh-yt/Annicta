<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="program"
            type="tkhshyt.annict.json.Program" />
    </data>

    <LinearLayout
        android:id="@+id/item_program"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/space_8dp"
        android:layout_marginStart="@dimen/space_8dp">

        <include
            layout="@layout/broadcast_bar" />

        <android.support.v7.widget.CardView
            style="@style/CardViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/workIcon"
                    style="@style/ImageIcon64dpStyle"
                    android:src="@drawable/ic_image_black_24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/start_at" />

                <TextView
                    android:id="@+id/start_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:padding="3dp"
                    android:text="@{AnnictUtil.prettyDate(program.started_at)}"
                    android:textColor="#00b8a9"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/channel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape_channel"
                    android:padding="3dp"
                    android:text="@{program.channel}"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/start_at"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/rebroadcast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape_rebroadcast"
                    android:padding="3dp"
                    android:text="@string/rebroadcast"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:visibility="@{program._rebroadcast ? visible : gone}"
                    app:layout_constraintStart_toEndOf="@+id/channel"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/workTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@{program.work.title}"
                    android:textColor="@color/light_blue_800"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/episode"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@+id/workIcon"
                    app:layout_constraintTop_toBottomOf="@+id/channel"
                    app:layout_constraintWidth_default="wrap" />

                <TextView
                    android:id="@+id/episode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@{program.episode.title}"
                    android:textColor="@color/light_blue_800"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/workIcon"
                    app:layout_constraintTop_toBottomOf="@+id/workTitle" />

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>